<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/offWhite"
    tools:context=".DoctorRegisterActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/topViewDRA"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardBackgroundColor="@color/red"
        app:cardCornerRadius="20dp"
        android:layout_alignParentTop="true"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/DRBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="20dp"
                    android:src="@drawable/baseline_arrow_back_ios_24"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    >



                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="CREATE YOUR ACCOUNT"
                android:textSize="35sp"
                android:layout_margin="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"

                />

        </LinearLayout>





    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topViewDRA"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            >

            <EditText
                android:id="@+id/doc_email_ET"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/edittext_bg"
                android:backgroundTint="@color/white"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                />

            <EditText
                android:id="@+id/doc_phone_ET"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:hint="Phone"
                android:background="@drawable/edittext_bg"
                android:backgroundTint="@color/white"
                android:paddingLeft="20dp"
                android:layout_marginBottom="30dp"
                android:inputType="phone"
                android:textColor="@color/black"
                />

            <EditText
                android:id="@+id/doc_fullname_ET"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:hint="Full Name"
                android:background="@drawable/edittext_bg"
                android:backgroundTint="@color/white"
                android:paddingLeft="20dp"
                android:layout_marginBottom="30dp"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                />

            <EditText
                android:id="@+id/doc_username_ET"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:hint="Username"
                android:background="@drawable/edittext_bg"
                android:backgroundTint="@color/white"
                android:paddingLeft="20dp"
                android:layout_marginBottom="30dp"
                android:inputType="text"
                android:textColor="@color/black"
                />

            <Spinner
                android:id="@+id/doc_department_ET"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/edittext_bg"
                android:backgroundTint="@color/white"
                android:hint="Blood Group"
                android:inputType="text"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                />

            <Spinner
                android:id="@+id/doc_city_ET"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/edittext_bg"
                android:backgroundTint="@color/white"
                android:hint="Select City"
                android:inputType="text"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                />


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#838383"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/doc_pass_ET"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:hint="Password"
                    android:background="@drawable/edittext_bg"
                    android:backgroundTint="@color/white"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginBottom="30dp"
                    android:inputType="textPassword"
                    android:textColor="@color/black"

                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#838383"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/doc_confirmPass_ET"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:hint="Repeat Password"
                    android:background="@drawable/edittext_bg"
                    android:backgroundTint="@color/white"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginBottom="30dp"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    />

            </com.google.android.material.textfield.TextInputLayout>



            <Button
                android:id="@+id/doc_reg_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Create Account"
                android:backgroundTint="@color/darkRed"
                android:textSize="18sp"
                android:layout_marginBottom="30dp"
                android:textColor="@color/white"
                />


        </LinearLayout>


    </ScrollView>


</RelativeLayout>