<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/offWhite"
    tools:context=".BookAppointmentActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/topViewDRA"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardBackgroundColor="@color/red"
        app:cardCornerRadius="20dp"
        android:layout_alignParentTop="true"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/backBtnBA"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="20dp"
                    android:src="@drawable/baseline_arrow_back_ios_24"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    >

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/docNameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:text="DOCTOR NAME"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:textStyle="bold"

                />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="50dp"
               >

               <ImageView
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:src="@drawable/baseline_call_24"
                   android:layout_marginLeft="20dp"
                   />

               <TextView
                   android:id="@+id/callBtnTV"
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="20dp"
                   android:layout_marginBottom="10dp"
                   android:text="CALL DOCTOR"
                   android:textColor="@color/white"
                   android:textSize="25sp"
                   android:textStyle="bold"
                   />

           </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:text="APPOINTMENT FORM"
                android:textColor="@color/darkRed"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textAlignment="center"
                />

            <EditText
                android:id="@+id/patientNameET"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:hint="Patient Name"
                android:background="@drawable/edittext_bg"
                android:backgroundTint="@color/white"
                android:paddingLeft="20dp"
                android:layout_marginBottom="30dp"
                android:inputType="textPersonName"
                />


            <EditText
                android:id="@+id/mobileNumberET"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:hint="Mobile Number"
                android:background="@drawable/edittext_bg"
                android:backgroundTint="@color/white"
                android:paddingLeft="20dp"
                android:layout_marginBottom="30dp"
                android:inputType="textPersonName"
                />

            <TextView
                android:id="@+id/selectDateET"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="Select Date"
                android:background="@drawable/edittext_bg"
                android:backgroundTint="@color/white"
                android:paddingLeft="20dp"
                android:layout_marginBottom="30dp"
                android:inputType="textPersonName"
                android:textSize="18dp"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/selectTimeET"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="Select Time"
                android:background="@drawable/edittext_bg"
                android:backgroundTint="@color/white"
                android:paddingLeft="20dp"
                android:layout_marginBottom="30dp"
                android:inputType="textPersonName"
                android:textSize="18dp"
                android:gravity="center_vertical"
                />

            <Spinner
                android:id="@+id/bloodGroupSpinner"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/edittext_bg"
                android:backgroundTint="@color/white"
                android:hint="Blood Group"
                android:inputType="text"
                android:paddingLeft="20dp" />

            <Spinner
                android:id="@+id/citySelectSpinner"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/edittext_bg"
                android:backgroundTint="@color/white"
                android:hint="Select City"
                android:inputType="text"
                android:paddingLeft="20dp" />



            <Button
                android:id="@+id/createAppointmentBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Create Appointment"
                android:layout_alignParentBottom="true"
                android:layout_marginVertical="10dp"
                android:textSize="20dp"
                android:backgroundTint="@color/darkRed"
                />


        </LinearLayout>



    </ScrollView>


</LinearLayout>