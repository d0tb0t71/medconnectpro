<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/offWhite"
    tools:openDrawer="start"
    android:id="@+id/drawerLayout"
    android:fitsSystemWindows="true"
    tools:context=".DateChooserActivity">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/drawer_items"
        app:headerLayout="@layout/drawer_header"
        android:background="@color/white"
        android:layout_gravity="start"
        android:visibility="visible"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/topViewDRA"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardBackgroundColor="@color/red"
            app:cardCornerRadius="20dp"
            android:layout_alignParentTop="true"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                >

                <include
                    layout="@layout/top_actionbar"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="DATE"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                    android:textStyle="bold"

                    />

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/dateSearchView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:imeOptions="actionSearch"
                    app:iconifiedByDefault="false"
                    android:background="@drawable/edittext_bg"
                    app:queryBackground="@android:color/transparent"
                    android:layout_marginHorizontal="20dp"
                    app:queryHint="Search here..." />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/datesView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/topViewDRA"
            android:layout_above="@id/bookAppointmentBtn"
            android:padding="20dp"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/datesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <TextView
                android:id="@+id/nobookTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="No booking till now"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:visibility="gone"
                />

        </RelativeLayout>

        <Button
            android:id="@+id/bookAppointmentBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Book Appointment Now"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:textSize="20dp"
            android:backgroundTint="@color/darkRed"
            android:textColor="@color/white"
            />



    </RelativeLayout>




</androidx.drawerlayout.widget.DrawerLayout>